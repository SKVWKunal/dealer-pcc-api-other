# Node.js environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/oneaftersales
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-minimum-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here-for-data-encryption

# Session Configuration
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long
REDIS_URL=redis://localhost:6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@oneaftersales.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@oneaftersales.com

# Super Admin Credentials
SUPER_ADMIN_EMAIL=superadmin@oneaftersales.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!

# Frontend URL
FRONTEND_URL=http://localhost:8080

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=oneaftersales-uploads
